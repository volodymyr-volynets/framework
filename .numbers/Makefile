.PHONY: version_test version_commit

all: version_test

# ----------------------------------------------------------------------------------------------------------------
# --- Dependencies -----------------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------------------------------
version_test:
	@# testing version
	@-php Framework/Manager.php version test 0;

version_commit:
	@# commit version
	@-php Framework/Manager.php version commit 0;

# --------------------------------------------------------------------------------------------------------------------------------------------
# --- Help commands --------------------------------------------------------------------------------------------------------------------------
# --------------------------------------------------------------------------------------------------------------------------------------------
help:
	#
	#
	# Available commands:
	#   Version commands:
	#	make version_test - test version
